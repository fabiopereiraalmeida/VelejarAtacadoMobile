            android:background="@drawable/background4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/iv_imagem_cliente"
                android:layout_marginTop="20dp"
                android:background="@drawable/sem_foto_perfil"
                android:onClick="clickFotoPerfil"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_razao_social_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Razão Social:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:inputType="textPersonName"
                android:layout_below="@+id/iv_imagem_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="19dp" />

            <EditText
                android:id="@+id/edt_razao_social_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_razao_social_cadastro_cliente"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_fantasia_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Fantasia:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_below="@+id/edt_razao_social_cadastro_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edt_fantasia_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_fantasia_cadastro_cliente"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_cnpj_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CNPJ:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_below="@+id/edt_fantasia_cadastro_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edt_cnpj_cadastro_cliente"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_cnpj_cadastro_cliente"
                android:ems="10" />

            <TextView
                android:id="@+id/tv_inscricao_estadual_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_marginTop="20dp"
                android:inputType="textPersonName"
                android:layout_below="@+id/edt_cnpj_cadastro_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Incrição Estadual:" />

            <EditText
                android:id="@+id/edt_inscricao_estadual_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_inscricao_estadual_cadastro_cliente"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_cpf_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CPF:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_below="@+id/edt_inscricao_estadual_cadastro_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edt_cpf_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_cpf_cadastro_cliente"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_telefone_fixo_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Telefone fixo:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_below="@+id/edt_cpf_cadastro_cliente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edt_telefone_fixo_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_telefone_fixo_cadastro_cliente"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/tv_telefone_opcional_cadastro_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Telefone opcional:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:layout_below="@+id/edt_telefone_fixo_cadastro_cliente"
