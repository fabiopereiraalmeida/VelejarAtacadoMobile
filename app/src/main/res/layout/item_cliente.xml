
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/iv_venda_imagem_produto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:src="@null"/>

    <TextView
        android:id="@+id/tv_caixa_nome_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Razão Social Cliente"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:textColor="@color/cinzaEscuro"
        android:layout_toRightOf="@+id/iv_venda_imagem_produto"
        android:layout_toLeftOf="@+id/tv_situacao_cliente_item"
        android:layout_toStartOf="@+id/tv_situacao_cliente_item" />

    <TextView
        android:id="@+id/tv_venda_preco_unitario"
        android:layout_below="@+id/tv_caixa_nome_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:text="Fantasia Cliente"
        android:textColor="@color/azul"
        android:layout_toRightOf="@+id/iv_venda_imagem_produto"
        android:layout_toLeftOf="@+id/tv_situacao_cliente_item"
        android:layout_toStartOf="@+id/tv_situacao_cliente_item" />

    <TextView
        android:id="@+id/tv_situacao_cliente_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Situação"
        android:textColor="@color/verde"
        android:textSize="14sp"
        android:layout_alignTop="@+id/tv_venda_preco_unitario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/vw_divisor_item"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/tv_caixa_nome_cliente"
        android:layout_below="@+id/tv_venda_preco_unitario"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CNPJ"
        android:id="@+id/tv_apelido_cliente_item"
        android:textColor="@color/cinzaEscuro"
        android:layout_below="@+id/tv_venda_preco_unitario"
        android:layout_toRightOf="@+id/iv_venda_imagem_produto"
        android:layout_toLeftOf="@+id/tv_situacao_cliente_item"
        android:layout_toStartOf="@+id/tv_situacao_cliente_item" />


</RelativeLayout>
