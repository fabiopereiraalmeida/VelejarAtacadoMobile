
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/iv_usuario_comentario_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:src="@null"/>

    <TextView
        android:id="@+id/tv_descricao_comentario_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descricao comentario"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:textColor="@color/cinzaEscuro"
        android:layout_toRightOf="@+id/iv_usuario_comentario_item"/>

    <TextView
        android:id="@+id/tv_usuario_comentario_item"
        android:layout_below="@+id/tv_descricao_comentario_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:text="Fulano de Tal e Silva"
        android:textColor="@color/azul"
        android:layout_toRightOf="@+id/iv_usuario_comentario_item"/>

    <View
        android:id="@+id/vw_divisor_item"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_descricao_comentario_item"
        android:layout_below="@+id/tv_usuario_comentario_item"
        android:background="@color/colorPrimary"
        />



</RelativeLayout>
