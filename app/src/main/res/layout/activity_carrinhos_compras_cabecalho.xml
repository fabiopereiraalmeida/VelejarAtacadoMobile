<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.grupocaravela.velejar.atacadomobile.CarrinhosComprasCabecalhoActivity">

    <!-- Inicioa toobar colocado -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        app:theme="@style/Theme.CompreFacil"/>
    <!-- Fim toobar colocado -->

    <FrameLayout
        android:layout_below="@+id/toolbar_main_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_carrinhos_compras_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Novo carrinho"
        android:onClick="clickCriarCarrinho"
        android:drawableLeft="@drawable/carrinho_24x24"
        android:id="@+id/bt_comentar_comentarios"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
