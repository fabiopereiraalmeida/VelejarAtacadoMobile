<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.grupocaravela.velejar.atacadomobile.fragments.ContaReceberFragment">

    <Spinner
        android:id="@+id/spinnerCategoriasPesquisaContasReceber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_localizar_contas_receber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/iv_localizar_contas_receber"
        android:layout_toEndOf="@+id/iv_localizar_contas_receber"
        android:layout_below="@+id/spinnerCategoriasPesquisaContasReceber" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_localizar_contas_receber"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/edt_localizar_contas_receber" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_contas_receber_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edt_localizar_contas_receber" />


</RelativeLayout>
