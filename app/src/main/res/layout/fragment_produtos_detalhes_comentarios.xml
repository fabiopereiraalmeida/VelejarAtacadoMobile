<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.grupocaravela.velejar.atacadomobile.fragments.ProdutosDestaqueFragment">

    <FrameLayout
        android:layout_below="@+id/toolbar_main_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_fragment_container_detalhes_fotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background6"
            android:layout_below="@+id/toolbar_main_top">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_produto_comentarios_list_detalhes"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Comentar"
                android:onClick="clickComentar"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/comentario_azul_24x24"
                android:id="@+id/bt_comentar_comentarios"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
